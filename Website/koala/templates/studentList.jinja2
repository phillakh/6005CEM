{% extends "layout.jinja2" %}

{% block content %}
<div class="col border">
  <h2>Student Lists</h2>
  <p>A list of all students</p>


  <h5>Filter Options</h5>
  <form>
    <div class="form-group">
        <label for="filterName">Name</label>
        <input type="text" class="form-control" id="filterName" name="filterName">
    </div>
    <div class="form-group">
        <label for="filterModule">Module</label>
        <input type="text" class="form-control" id="filterModule" name="filterModule">
    </div>
    <div class="form-group">
      <label for="groupBy">Group By</label>
      <select class="form-control" id="groupBy" name="groupBy">
	{% for module in modules %}
	<option value="{{module.id}}">{{module.name}}</option>
	{% endfor %}
      </select>
      <button type="submit" class="btn btn-primary" name="filter">Filter</button>
      <a class="btn btn-primary" href="{{request.route_url('studentList', moduleId = currentModule.id)}}">Reset</a>

  </form>

  
  <table class="mt-5 table whitecontent">
    <thead>
      <tr>
	<th>Name</th>
	<th>Email</th>
	<td>Module</td>
      </tr>
    </thead>
    <tbody>
      {% for row in data %}
      <tr>
	<td>{{ row[0] }}</td>
	<td>{{ row[1] }}</td>
	<td>{{ row[2] }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>


</div>
{% endblock content %}
